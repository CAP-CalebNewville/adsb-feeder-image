# start from DietPi

VARIANT_CONFIG_DIR=$(realpath -s $(dirname $(realpath -s $BASH_SOURCE))/../..)
BASE_ZIP_IMG=`ls -t ${DIST_PATH}/image-dietpi/*.{zip,7z,xz} | head -n 1`
BASE_APT_CACHE=no
OCTOPI_INCLUDE_WIRINGPI=no
export BASE_DISTRO=dietpi
BASE_IMAGE_RASPBIAN=no
# The root partiton of the image filesystem, 2 for images that start with /boot
BASE_ROOT_PARTITION=1
# additional space while setting things up
BASE_IMAGE_ENLARGEROOT=1000
# empty space after we are done so that the first boot can succeed
if [ "$BASE_ARCH" = "x86_64" ] ; then
    # in a VM we need to include all the space we need up front and rely
    # on the image format to handle the empty space correctly
    BASE_IMAGE_RESIZEROOT=16000
else
    BASE_IMAGE_RESIZEROOT=500
fi


# this works differently on DietPi
export BASE_SSH_ENABLE=no
